{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./static/js",
    "rootDir": "./static/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true
  },
  "include": ["static/ts/**/*"],
  "exclude": ["node_modules", "static/js"]
}
